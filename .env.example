# Environment Configuration Example
# Copy this file to .env.local for development
# Copy this file to .env.production for production

# Domain Configuration
DOMAIN=www.fastcomm.com.br
STAGING_DOMAIN=staging.fastcomm.com.br
CORS_ORIGIN=https://www.fastcomm.com.br

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/fastcomm_db
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@fastcomm.com.br
CONTACT_EMAIL=faleconosco@ctctech.com.br

# Analytics Configuration
GA_MEASUREMENT_ID=G-XXXXXXXXXX
FB_PIXEL_ID=123456789
LINKEDIN_PARTNER_ID=123456

# API Keys
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
CALENDLY_API_KEY=your-calendly-api-key

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key
SESSION_SECRET=your-session-secret

# External Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx
GITHUB_TOKEN=your-github-token

# Deployment
SSH_HOST=your-server-ip
SSH_USER=your-ssh-user
SSH_KEY_PATH=/path/to/your/private/key
DEPLOY_PATH=/opt/fastcomm-health-connect-hub

# Monitoring
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=info
MONITORING_ENABLED=true

# Feature Flags
FEATURE_AI_CHAT=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BETA_FEATURES=false

# FHIR Configuration
FHIR_SERVER_URL=https://fhir.fastcomm.com.br
FHIR_CLIENT_ID=your-fhir-client-id
FHIR_CLIENT_SECRET=your-fhir-client-secret

# HL7 Configuration
HL7_SERVER_URL=https://hl7.fastcomm.com.br
